{
  "name": "template-ts",
  "version": "1.0.0",
  "description": "Template for TypeScript Projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rm -rf ./dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "-prepublish": "npm run build && npm run test",
    "prettier": "prettier",
    "prettier:check": "npm run prettier -- --list-different \"{src,test}/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier -- --write \"{src,test}/**/*.{ts,tsx}\"",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "test:html": "nyc --reporter html --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "git-hook:pre-commit": "npm run prettier:write && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragoscirjan/template-ts.git"
  },
  "author": "Dragos Cirjan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dragoscirjan/template-ts/issues"
  },
  "homepage": "https://github.com/dragoscirjan/template-ts#readme",
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/uuid": "^3.4.5",
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3",
    "typings": "^2.1.1",
    "yorkie": "^2.0.0"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "uuid": "^3.3.3"
  },
  "gitHooks": {
    "pre-commit": "npm run git-hook:pre-commit && git add ."
  }
}
